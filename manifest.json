{
  "manifest_version": 3,
  "name": "Custom Browser Homepage",
  "version": "3.0",
  "description": "Replaces the browser's homepage with a custom page",
  
  "chrome_url_overrides": {
    "newtab": "homepage.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },    

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://favicons.seadfeng.workers.dev/"
  },

  "background": {
    "service_worker": "scripts/service-worker.js"
  },

  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}